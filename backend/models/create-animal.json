{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "create-animal",
    "type": "object",
    "properties": {
        "animalName": {
            "type": "string"
        },
        "type": {
            "type": "string",
            "enum": ["cat", "dog", "other"]
        },
        "breed": {
            "type": "string"
        },
        "age": {
            "type": "string",
            "enum": ["baby", "young", "adult", "senior"]
        },
        "gender": {
            "type": "string",
            "enum": ["n/a", "male", "female"]
        },
        "disposition": {
            "type": "string",
            "enum": ["goodWithOtherAnimals", "goodWithChildren", "mustBeLeashed"]
        },
        "availability": {
            "type": "string",
            "enum": ["available", "notAvailable", "pending", "adopted"]
        },
        "imageCollections": {
            "type": "array"
        },
        "avatar": {
            "type": "string",
            "format": "uri"
        },
        "shelterName": {
            "type": "string"
        },
        "animalName_shelterName": {
            "type": "string"
        }
    },
    "required": [
        "animalName",
        "type",
        "breed",
        "availability",
        "age",
        "gender",
        "disposition",
        "shelterName"
    ],
    "dependencies": {
        "avatar": { "required": ["imageCollections"]}
    }  
}